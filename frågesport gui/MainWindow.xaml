<Window x:Class="frågesport_gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:frågesport_gui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="0,0,0,-6">
        <TextBlock Name="textblock1" Margin="40px" Height="70" Width="240" FontSize="50" Text="Frågesport"></TextBlock>
        <TextBlock Name="textblock2" Margin="40px" Height="50" Width="500" FontSize="35" Text="Vad heter Norges Huvudstad?"></TextBlock>
        <TextBox Name="textboxsvar" Margin="40px" Height="40" Width="300" FontSize="25" Text="Svara här"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="buttonrätta" Height="30" Width="60" FontSize="20" Margin="0,0,200,0" Content="Rätta" />
            <Button Name="buttonnästa" Height="30" Width="120" FontSize="20" Margin="200,0,0,0" Content="Nästa Fråga"/>
        </StackPanel>
    </StackPanel>
    
</Window>
